# Development Environment Configuration
# This file is configured for local development by default
# For production, use: .env.production
# For development, use: .env.development (or this file)

# Runtime environment: development | production
ENVIRONMENT=development
# Enable verbose error messages and auto-reload in dev
DEBUG=true
# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO
# Network bind host
HOST=0.0.0.0
# API port
PORT=8000

# Database Configuration
# Async SQLAlchemy DSN (default: SQLite file under data/)
DATABASE_URL=sqlite+aiosqlite:///./data/shop.db

# JWT Authentication
# HMAC secret for JWT signing (change in production)
SECRET_KEY=your-super-secret-key-change-this-in-production
# Access token TTL in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Admin User Configuration
# Initial admin login; password must be changed on first login
ADMIN_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=admin
# New admin password used in tests/utilities
ADMIN_NEW_PASSWORD=WQu^^^kLNrDDEXBJ#WJT9Z

# Test Configuration (used by helper scripts)
TEST_USERNAME=testuser
TEST_USER_PASSWORD=testpass123

# File Upload Configuration
# Maximum upload size in bytes (50MB)
MAX_FILE_SIZE=52428800
# Persistent uploads directory
UPLOAD_DIR=./uploads/3d_models
# Temporary working directory
TEMP_DIR=./uploads/temp

# CORS Configuration
# Allowed origins as JSON array
CORS_ORIGINS=["*"]
# Allow sending credentials (cookies/authorization headers)
CORS_ALLOW_CREDENTIALS=true
# Allowed methods and headers as JSON arrays
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
# Python logging format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Bitrix24 Integration
# Master switch for Bitrix integration
BITRIX_ENABLED=true
# Incoming webhook base URL (ends with /rest/<user>/<token>/)
BITRIX24_WEBHOOK_URL=https://192.168.21.137/rest/1/wtda8upj0d5t3r3j/
# Verify TLS certificates (set false for LAN/self-signed)
BITRIX_VERIFY_TLS=false
#STL_SERVER_URL=http://mdgkd-vlabal.int.kronshtadt.ru:7000/calculate/cnc
# Base calculator service URL - specific endpoints will be appended dynamically
CALCULATOR_BASE_URL=http://backend-calc:7000 #http://localhost:7000

